{
  "name": "typescript-rest-api",
  "version": "1.0.0",
  "description": "TypeScript REST API",
  "author": "Christian Barrios <christiandbf@hotmail.com>",
  "license": "MIT",
  "bugs": "https://github.com/christiandbf/rest-api-typescript/issues",
  "homepage": "https://github.com/christiandbf/rest-api-typescript/blob/master/README.md",
  "repository": "github.com:christiandbf/rest-api-typescript.git",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc",
    "dev": "nodemon --watch src -e ts --exec ts-node ./src/server",
    "start": "node .",
    "test": "jest"
  },
  "dependencies": {
    "@types/supertest": "^2.0.8",
    "compression": "^1.7.4",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "mongoose": "^5.7.5",
    "morgan": "^1.9.1"
  },
  "devDependencies": {
    "@types/compression": "^1.0.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/jest": "^24.0.17",
    "@types/mongoose": "^5.5.12",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.2",
    "husky": "^4.2.1",
    "jest": "^24.9.0",
    "lint-staged": "^10.0.2",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tsc": "^1.20150623.0",
    "tslint": "^5.20.1",
    "typescript": "^3.5.3"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"npm run --silent lint",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
